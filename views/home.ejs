

<link rel="stylesheet" href="/css/home.css">

<div class="container mt-5">
  <div id="welcome-message" class="mb-4">
    <h2 class="text-center">Welcome to Issue Tracker</h2>
  </div>
  <div class="row">
    <div class="col-md-8 col-12">
      <div class="list-group flex-row mb-3">
        <a href="#" id="tab1-link" class="list-group-item list-group-item-action active"
          onclick="showTab('tab1', 'tab1-link')">All Projects</a>
        <a href="#" id="tab2-link" class="list-group-item list-group-item-action"
          onclick="showTab('tab2', 'tab2-link')">Starred Projects</a>
      </div>
    </div>
    <div class="col-md-2 col-6">
      <div class="input-group mb-3">
        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true"
          aria-expanded="false">
          Sort by
        </button>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="/project/sort?sortBy=name">Name</a>
          <a class="dropdown-item" href="/project/sort?sortBy=author">Author</a>
          <a class="dropdown-item" href="/project/sort?sortBy=createdDate">Created Date</a>
        </div>
      </div>
    </div>
    <div class="col-md-2 col-6">
      <button onClick="createNewProject()" class="btn btn-success">Create New Project</button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div id="tab1" class="tab-content active">
        <% projects.forEach(function(project) { %>
          <div class="col-md-12 mb-4">
            <div class="col-md-12 mb-4">
              <div class="card" onclick="redirectToProject('<%= project._id %>')">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-8">
                      <h5 class="card-title">
                        <%= project.name %>
                      </h5>
                      <p class="card-text">
                        <%= project.description %>
                      </p>
                      <p class="card-text">Author: <%= project.author %>
                      </p>
                    </div>
                    <div class="col-md-4">
                      <ul class="list-group">
                        <li class="list-group-item">
                          Open Issues:
                          <span><%= project.openIssues %></span>
                        </li>
                        <li class="list-group-item">
                          <span id="star-project-<%= project._id %>" onclick="toggleStar('<%= project._id %>', event)">
                            <%if(project.starred) {%>
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-star-fill" viewBox="0 0 16 16">
                                <path
                                  d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                              </svg>
                              <%}else{%>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                  class="bi bi-star" viewBox="0 0 16 16">
                                  <path
                                    d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                                </svg>
                                <%}%>
                          </span>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
      </div>

      <div id="tab2" class="tab-content" style="display: none;">
        <% projects.forEach(function(project) { %>
          <% if(project.starred){%>
            <div class="col-md-12 mb-4">
              <div class="card" id="project-card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-8">
                      <h5 class="card-title">
                        <%= project.name %>
                      </h5>
                      <p class="card-text">
                        <%= project.description %>
                      </p>
                      <p class="card-text">Author: <%= project.author %>
                      </p>
                    </div>
                    <div class="col-md-4">
                      <ul class="list-group">
                        <li class="list-group-item">
                          Open Issues:
                          <span><%= project.openIssues %></span>
                        </li>
                        <li class="list-group-item">
                          <span>
                            <%if(project.starred) {%>
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-star-fill" viewBox="0 0 16 16">
                                <path
                                  d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                              </svg>
                              <%}else{%>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                  class="bi bi-star" viewBox="0 0 16 16">
                                  <path
                                    d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                                </svg>
                                <%}%>
                          </span>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <%}%>
              <% }); %>
      </div>
    </div>
  </div>
</div>

 <script src="/js/home.js"></script>